<project name="tools.properties">
    <dirname property="tools.properties.dir" file="${ant.file.tools.properties}"/>

    <!-- derived project properties -->
    <property name="project.name" value="${ant.project.name}" />
    <property name="project.swf" value="${project.name}.swf" />
    <property name="project.swc" value="${project.name}.swc" />
    <property name="project.flex2.application" value="${project.name}.mxml" />
    <property name="project.jar" value="${project.name}.jar" />
    <property name="project.war" value="${project.name}.war" />

    <!-- build properties -->
    <property name="build.dir" value="build"/>
    <property name="build.stage.dir" value="build/stage"/>
    <property name="build.dist.dir" value="build/dist"/>
    <!-- the base directory which all assets fall under, see flex2-* targets -->
    <property name="uptodate.dir" location="${tools.properties.dir}/.."/>
    
    <!-- flex2 properties -->
    <property name="flex2.dir" value="" />
    <property name="flex2.frameworks.dir" value="${flex2.dir}/frameworks" />
    <property name="flex2.config" value="${flex2.frameworks.dir}/flex-config.xml" />
    <property name="flex2.dist.lib" value="${flex2.dir}/lib" />
    <property name="flex2.compc.jar" value="${flex2.dist.lib}/compc.jar" />
    <property name="flex2.mxmlc.jar" value="${flex2.dist.lib}/mxmlc.jar" />
    <property name="flex2.mxmlc.options" value="" />
    <property name="flex2.compc.options" value="" />
    <property name="src.flex2.dir" value="flex2"/>
    <property name="build.compc.dir" value="${build.dir}/swc/"/>
    <property name="build.mxmlc.dir" value="${build.dir}/swf/"/>
    
    <!-- as3doc properties -->
    <property name="as3doc.template.dir" value="${flex2.dir}/asdoc/templates" />
    <property name="as3doc.jar" value="${flex2.dir}/lib/asdoc.jar" />
    <property name="as3doc.xalan.jar" value="${flex2.dir}/asdoc/lib/xalan.jar" />
    <property name="build.as3doc.dir" value="${build.dir}/asdoc/"/>

    <!-- arc-flexunit2 properties -->
    <property name="arc-flexunit2.loglevel" value="info" />
    <property name="arc-flexunit2.alltests.suite" value="FlexUnitAllTests.suite()" />
    <property name="arc-flexunit2.reportserver.port" value="50031" />
    <property name="arc-flexunit2.reportserver.host" value="localhost" />
    <property name="arc-flexunit2.timeout" value="150000" />
    
    <!-- javac properties -->
    <property name="javac.debug" value="true"/>
    <property name="src.java.dir" value="java"/>
    <property name="build.javac.dir" value="build/classes"/>
</project>
